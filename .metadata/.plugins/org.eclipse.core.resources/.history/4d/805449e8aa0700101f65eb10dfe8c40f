package choice;

import java.util.Scanner;

public class IfElse1 {

	public static void main(String[] args) {
		// 조건문 -if 문,(조건){출력}
		//나이가 15세 이상이면"관람가" 출력, 그렇지 않으면 "관람불가"//if~ else구문
		//3개이상 다중일때는 else if
		Scanner scan=new Scanner(System.in);//scan으로 이름줄이기!!!!!
		
		System.out.println("나이를 입력하세요");
//		int age=14;
		int age= scan.nextInt();
		
		System.out.println("이름을 입력하세요");
		String name= scan.nextLine();
		
		
		if(age>=15) {
			System.out.println("관람가");
			
		}else {	System.out.println("관람불가");
}
		System.out.println("나이는"+age+"세 입니다");
		
		if (name.equals("조유진") ) {System.out.println("무료입니다!");}

		scan.close();//닫아주기
	}
	 	

}
